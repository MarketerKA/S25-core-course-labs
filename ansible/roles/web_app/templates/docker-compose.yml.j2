version: '3.8'

services:
  app:
    image: {{ app_image }}
    container_name: {{ app_name }}
    restart: unless-stopped
    ports:
      - "{{ app_port }}:8000"
    environment:
{% if app_env is defined %}
{% for key, value in app_env.items() %}
      {{ key }}: "{{ value }}"
{% endfor %}
{% endif %}
